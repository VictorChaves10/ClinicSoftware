@model ClinicSoftware.Models.Client


<div class="gap-4 d-flex flex-column align-items-center">

    <div class="card card-client shadow m-auto">

        <div class="header-card-client">

            <div class="card-client-image">
                 <img src="@Model.ProfileImageUrl" alt="Perfil" />               
            </div>

        </div>

        <div class="row card-body m-2 p-2">

            <div class="col-12 card-title">
                <h2 >@Model.ClientName</h2>
            </div>
            

            <div class="col-6 mt-3 p-1 d-flex flex-column align-items-center">
                 
                <div class="card-body-data gap-2 mb-3 w-75">
                    <i class="bi bi-phone"></i>
                   <input class="form-control form-control-sm" value="@Model.ClientPhoneNumber" disabled/>
                </div>

                <div class="card-body-data gap-2 mb-3 w-75">
                    <i class="bi bi-telephone"></i>
                    <input class="form-control form-control-sm" value="@Model.ClientAlternateContact" disabled />                   
                </div>

                <div class="card-body-data gap-2 mb-3 w-75">
                    <i class="bi bi-envelope-at"></i>
                    <input class="form-control form-control-sm" value="@Model.ClientEmail" disabled />
                </div>

            </div>

            <div class="col-6 mt-3 p-1 d-flex flex-column align-items-center ">

                <div class="card-body-data gap-2 mb-3 w-75">
                    <i class="bi bi-cake2"></i>
                    <input class="form-control form-control-sm" value="@Model.ClientBirthday.ToShortDateString()" disabled />                
                </div>
         
                <div class="card-body-data gap-2 mb-3 w-75">
                    <i class="bi bi-calendar2-check"></i>
                    <input class="form-control form-control-sm" value="Total atendimentos: 0" disabled />
                </div>

                <div class="card-body-data gap-2 mb-3 w-75">
                    <i class="bi bi-calendar-event"></i>
                    <input class="form-control form-control-sm" value="Último atendimento: 0 dias" disabled />
                </div>

            </div>

            <div class="d-grid col-12 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-outline-primary btn-sm">Editar cliente</a>
            </div>

        </div>
    </div>

    <div>
        <a asp-controller="Client" asp-action="Index" class="btn btn-primary">Voltar</a>
        <a asp-controller="Client" asp-action="Delete" asp-route-id="@Model.ClientId" class="btn btn-danger">Deletar</a>
    </div>

</div>
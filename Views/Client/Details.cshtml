@model ClinicSoftware.Models.Client


<div class="gap-4 d-flex flex-column align-items-center">

    <div class="card card-client shadow m-auto">

        <div class="header-card-client">
            <div class="card-image-aniversariante">

                 <img src="@Model.ProfileImageUrl" alt="Perfil" />
               
            </div>
        </div>

        <div class="card-body m-2">
            <h2 class="card-title">@Model.ClientName</h2>

            <div class="row mt-5">

                <div class="col card-body-data gap-2">
                
                   <i class="bi bi-phone"></i>
                             
                   <p class="">@Model.ClientPhoneNumber</p>
                </div>

                <div class="col card-body-data  gap-2">
                    <i class="bi bi-cake2"></i>
                    <p>@Model.ClientBirthday.ToShortDateString()</p>
                </div>

            </div>

            <div class="row mt-1">
                <div class="col card-body-data  gap-2">
                    <i class="bi bi-telephone"></i>
                    <p>@Model.ClientAlternateContact</p>
                </div>

                <div class="col card-body-data  gap-2">
                    <i class="bi bi-calendar2-check"></i>
                    <p>Total atendimentos: 0 </p>
                </div>

            </div>

            <div class="row mt-1">
                <div class="col card-body-data  gap-2">
                    <i class="bi bi-envelope-at"></i>
                    <p>@Model.ClientEmail</p>
                </div>
           
                <div class="col card-body-data gap-2">
                    <i class="bi bi-calendar-event"></i>
                    <p>Último atendimento: 0 dias</p>
                </div>
                
            </div>
            <div class="d-grid col-12 mt-5">
                <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-outline-primary btn-sm">Editar cliente</a>
            </div>

        </div>
    </div>

    <div>
        <a asp-controller="Client" asp-action="Index" class="btn btn-primary">Voltar</a>
        <a asp-controller="Client" asp-action="Delete" asp-route-id="@Model.ClientId" class="btn btn-danger">Deletar</a>
    </div>

</div>
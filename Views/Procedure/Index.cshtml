@model IEnumerable<Procedure>



@{
    ViewData["Title"] = "Index";
}

<section class="m-1 p-2">

    <h1 class="text-center m-5">Procedimentos</h1>

    <div class="mb-5">
        <a asp-action="Create" class="btn btn-primary">Adicionar procedimento</a>
    </div>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProcedureName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProcedureDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProcedurePrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProcedureName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProcedureDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProcedurePrice)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProcedureId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.ProcedureId">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProcedureId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>